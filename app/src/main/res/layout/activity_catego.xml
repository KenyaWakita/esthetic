<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:layout_height="wrap_content"
        android:text="カテゴリーを選んでください"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </TextView>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="リラックス"
        app:bootstrapBrand="danger"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:id="@+id/relax_button"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数字"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:id="@+id/suji_button"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/relax_button"
        android:layout_centerHorizontal="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文章"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:id="@+id/ningen_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/suji_button" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="図形"
        android:background="@color/purpl"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:id="@+id/hirameki_button"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/ningen_button"
        android:layout_centerHorizontal="true" />

    <!--<com.beardedhen.androidbootstrap.BootstrapButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="IQテスト"-->
        <!--app:bootstrapBrand="danger"-->
        <!--app:bootstrapSize="lg"-->
        <!--app:buttonMode="regular"-->
        <!--app:showOutline="false"-->
        <!--app:roundedCorners="true"-->
        <!--android:id="@+id/IQ_button"-->
        <!--android:layout_below="@+id/hirameki_button"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="42dp" />-->

    <com.ad_stir.webview.AdstirMraidView
        media="MEDIA-8f52fd45"
        spot="1"
        adsize="350,50"
        refresh_interval="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
